{
  "name": "@sparc/reporting-service",
  "version": "1.0.0",
  "description": "SPARC Reporting Service - Handles compliance reports, audit trails, and analytics dashboards",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "prisma studio",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@prisma/client": "^5.7.0",
    "@sparc/shared": "*",
    "chart.js": "^4.4.0",
    "chartjs-node-canvas": "^4.1.6",
    "csv-parse": "^5.5.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.0",
    "handlebars": "^4.7.8",
    "hono": "^3.12.0",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "prisma": "^5.7.0",
    "puppeteer": "^21.6.0",
    "redis": "^4.6.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "sparc",
    "reporting",
    "analytics",
    "compliance",
    "audit",
    "dashboard",
    "pdf",
    "csv",
    "charts"
  ],
