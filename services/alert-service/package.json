{
  "name": "@sparc/alert-service",
  "version": "1.0.0",
  "description": "Alert and notification service for SPARC platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/zod-validator": "^0.2.0",
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/instrumentation": "^0.44.0",
    "@opentelemetry/instrumentation-http": "^0.44.0",
    "@opentelemetry/sdk-node": "^0.44.0",
    "@opentelemetry/sdk-trace-node": "^1.17.1",
    "@opentelemetry/auto-instrumentations-node": "^0.39.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.44.0",
    "@opentelemetry/resources": "^1.17.1",
    "@opentelemetry/semantic-conventions": "^1.17.1",
    "@sparc/database": "*",
    "@sparc/shared": "*",
    "cron": "^3.1.6",
    "drizzle-orm": "^0.32.0",
    "hono": "^3.11.7",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "socket.io": "^4.7.4",
    "twilio": "^4.19.3",
    "uuid": "^9.0.1",
    "web-push": "^3.6.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cron": "^2.0.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/web-push": "^3.6.3",
    "drizzle-kit": "^0.22.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
