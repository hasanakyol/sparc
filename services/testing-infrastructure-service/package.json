{
  "name": "@sparc/testing-infrastructure-service",
  "version": "1.0.0",
  "description": "Comprehensive testing infrastructure service for SPARC platform",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "clean": "rm -rf dist coverage .turbo",
    "dev": "tsx watch src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "tsx src/tests/security/scanner.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:chaos": "tsx src/tests/chaos/runner.ts",
    "test:contract": "pact test",
    "test:e2e": "playwright test",
    "test:integration": "vitest run --dir src/tests/integration",
    "test:load": "k6 run k6/load-test.js",
    "test:security": "npm run security:scan && npm run security:audit",
    "test:unit": "vitest run --dir src/tests/unit",
    "test:visual": "percy exec -- playwright test --grep @visual",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.3.3",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/instrumentation": "^0.45.1",
    "@opentelemetry/instrumentation-http": "^0.45.1",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/sdk-trace-node": "^1.18.1",
    "@pact-foundation/pact": "^12.1.0",
    "@percy/playwright": "^1.0.4",
    "@playwright/test": "^1.40.1",
    "@sparc/shared": "workspace:*",
    "@sparc/database": "workspace:*",
    "@applitools/eyes-playwright": "^1.38.0",
    "artillery": "^2.0.3",
    "axe-playwright": "^1.2.3",
    "axios": "^1.6.2",
    "chaos-monkey": "^1.0.0",
    "dotenv": "^16.3.1",
    "hono": "^3.11.12",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "k6": "^0.48.0",
    "lighthouse": "^11.4.0",
    "node-schedule": "^2.1.1",
    "pact": "^11.0.2",
    "pino": "^8.16.2",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.40.1",
    "pngjs": "^7.0.0",
    "prom-client": "^15.0.0",
    "puppeteer": "^21.6.1",
    "sharp": "^0.33.1",
    "uuid": "^9.0.1",
    "zaproxy": "^1.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/node-schedule": "^2.1.5",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "UNLICENSED",
  "private": true
}
