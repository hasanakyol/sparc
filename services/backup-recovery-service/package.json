{
  "name": "@sparc/backup-recovery-service",
  "version": "1.0.0",
  "description": "Backup and Recovery Service for SPARC platform - handles automated backups, disaster recovery, and data restoration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "prisma studio",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-backup": "^3.474.0",
    "@aws-sdk/client-rds": "^3.474.0",
    "@aws-sdk/client-s3": "^3.474.0",
    "@hono/node-server": "^1.12.0",
    "@hono/zod-validator": "^0.2.0",
    "@prisma/client": "^5.7.0",
    "@sparc/shared": "*",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.0.6",
    "hono": "^3.12.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "backup",
    "recovery",
    "disaster-recovery",
    "data-protection",
    "aws-backup",
    "rds",
    "s3",
    "automated-backup",
    "point-in-time-recovery",
    "retention-policy"
  ],
  "author": "SPARC Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  }
}
