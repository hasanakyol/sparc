{
  "name": "@sparc/integration-service",
  "version": "1.0.0",
  "description": "Integration service for SPARC platform - manages third-party integrations, webhooks, and external system connections",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/zod-validator": "^0.2.0",
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/instrumentation": "^0.44.0",
    "@opentelemetry/instrumentation-http": "^0.44.0",
    "@opentelemetry/sdk-node": "^0.44.0",
    "@opentelemetry/sdk-trace-node": "^1.17.1",
    "@opentelemetry/auto-instrumentations-node": "^0.39.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.44.0",
    "@opentelemetry/resources": "^1.17.1",
    "@opentelemetry/semantic-conventions": "^1.17.1",
    "@sparc/database": "*",
    "@sparc/shared": "*",
    "axios": "^1.6.2",
    "bullmq": "^4.14.0",
    "cron": "^3.1.6",
    "drizzle-orm": "^0.32.0",
    "hono": "^3.11.7",
    "ioredis": "^5.3.2",
    "jsonpath": "^1.1.1",
    "jsonschema": "^1.4.1",
    "ldapjs": "^3.0.6",
    "node-cache": "^5.1.2",
    "openid-client": "^5.6.1",
    "p-queue": "^7.4.1",
    "passport": "^0.7.0",
    "passport-saml": "^3.2.4",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^3.0.6",
    "retry": "^0.13.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/jsonpath": "^0.2.4",
    "@types/ldapjs": "^3.0.5",
    "@types/node": "^20.9.0",
    "@types/passport": "^1.0.16",
    "@types/passport-saml": "^1.1.9",
    "@types/pg": "^8.10.9",
    "@types/retry": "^0.12.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "drizzle-kit": "^0.22.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "integration",
    "webhooks",
    "oauth",
    "saml",
    "ldap",
    "api-gateway",
    "plugins",
    "microservice",
