{
  "name": "@sparc/access-control-service",
  "version": "1.0.0",
  "description": "SPARC Access Control Service - Manages physical access control, door permissions, and hardware integration",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@sparc/shared": "workspace:*",
    "@hono/node-server": "^1.12.0",
    "hono": "^3.12.0",
    "@prisma/client": "^5.7.0",
    "prisma": "^5.7.0",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "ioredis": "^5.3.2",
    "node-cache": "^5.1.2",
    "ws": "^8.16.0",
    "serialport": "^12.0.0",
    "modbus-serial": "^8.0.16",
    "node-osdp": "^1.2.0",
    "mqtt": "^5.3.4",
    "snmp-native": "^1.0.29",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "@types/node": "^20.10.0"
  },
  "devDependencies": {
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/ws": "^8.5.10",
    "@types/node-cron": "^3.0.11",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "access-control",
    "physical-security",
    "door-control",
    "card-readers",
    "osdp",
    "offline-resilience",
    "hardware-integration",
    "sparc"
