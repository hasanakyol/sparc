{
  "name": "@sparc/visitor-management-service",
  "version": "1.0.0",
  "description": "SPARC Visitor Management Service - Handles visitor pre-registration, check-in/check-out processes, temporary credential issuance, and visitor tracking",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/zod-validator": "^0.2.1",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.46.0",
    "@opentelemetry/resources": "^1.19.0",
    "@opentelemetry/sdk-node": "^0.46.0",
    "@opentelemetry/semantic-conventions": "^1.19.0",
    "@sparc/database": "*",
    "@sparc/shared": "*",
    "drizzle-orm": "^0.29.1",
    "hono": "^3.12.0",
    "ioredis": "^5.3.2",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "postgres": "^3.4.3",
    "qrcode": "^1.5.3",
    "sharp": "^0.33.1",
    "socket.io": "^4.6.2",
    "twilio": "^4.19.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "visitor-management",
    "access-control",
    "security",
    "check-in",
    "temporary-credentials",
    "qr-codes",
    "badge-printing",
    "notifications"
  ],
  "author": "SPARC Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  }
}
